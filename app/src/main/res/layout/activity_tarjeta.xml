<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/grisclaro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Tarjeta">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/Tarjeta_Presentacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            >

            <TextView
                android:id="@+id/TxtPincipal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tienne"
                android:text="Principal"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/TxtSecundario"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/tienne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secundario"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/TxtCreditos"
                android:layout_marginTop="90dp"
                android:fontFamily="@font/tienne"
                android:textColor="@color/negro2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Integrantes: "
                android:textStyle="bold"
                android:layout_marginLeft="10dp"

                />

            <LinearLayout
                android:layout_marginTop="120dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    tools:srcCompat="@mipmap/imagen" />
                <TextView
                    android:id="@+id/TxtDani"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/tienne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dany Mauricio"
                    android:textStyle="italic"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:id="@+id/Txtsara"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/tienne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blanca Sarahi"
                    android:textStyle="italic"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            >


            <Button
                android:id="@+id/btnAtras"
                android:layout_marginHorizontal="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="atras"
                android:backgroundTint="@color/white"/>

            <Button
                android:id="@+id/button2"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ADD NEW"
                android:textColor="@color/white"
                android:fontFamily="@font/tienne"
                android:backgroundTint="@color/purple_500"/>
            />
        </LinearLayout>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>



    </LinearLayout>

